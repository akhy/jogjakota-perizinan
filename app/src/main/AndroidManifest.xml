<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="id.go.jogjakota.perizinan">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".BaseApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name=".SplashActivity"
            android:label="Perizinan"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".LoginActivity"
            android:label="Login"
            android:screenOrientation="portrait" />

        <activity
            android:name=".RegisterActivity"
            android:label="Pendaftaran"
            android:screenOrientation="portrait" />

        <activity
            android:name=".MainActivity"
            android:label="Main Menu"
            android:screenOrientation="portrait" />

        <activity
            android:name=".PermitListActivity"
            android:label="Pengajuan Anda"
            android:screenOrientation="portrait" />

        <activity
            android:name=".PermitDetailActivity"
            android:label="Status Pengajuan"
            android:screenOrientation="portrait" />

        <activity
            android:name=".PermitTypeListActivity"
            android:label="Ajukan Perizinan"
            android:screenOrientation="portrait" />

        <activity
            android:name=".PermitFormActivity"
            android:label="Ajukan Perizinan"
            android:screenOrientation="portrait" />

    </application>

</manifest>
